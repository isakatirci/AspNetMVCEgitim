@model AspNetMVCEgitim.Models.ViewModels.ProductEkleViewModel

@{
    ViewBag.Title = "Ekle";
}

<h1>@(Model.BugununTarihi)</h1>
<h1>@(Model.AdiSayadi )</h1>

<div class="row">
    <div class="col-lg-12">



        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-header card-header-tabs-line">
                <div class="card-title">
                    <h3 class="card-label">Ürün Tanıtım Kartı</h3>
                </div>
                <div class="card-toolbar">
                    <ul class="nav nav-tabs nav-bold nav-tabs-line">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#kt_tab_pane_1">Genel Bilgiler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#kt_tab_pane_2">Ürün Hareketleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#Sekme_XmlEntegrasyon">XML Entegrasyon</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">

                    <div class="tab-pane fade show active" id="kt_tab_pane_1" role="tabpanel">


                        <!--begin::Card-->
                        <div class="card card-custom gutter-b ">
                            <div class="card-header">
                                <h3 class="card-title">3 Columns Form Layout</h3>
                                <div class="card-toolbar">
                                </div>
                            </div>
                            <!--begin::Form-->
                            <form class="form">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <div class="col-lg-6">
                                            <label>Product Name:</label>
                                            <input type="text" class="form-control" id="ProductName" value="@(Model.Product?.ProductName)" name="ProductName" placeholder="" />
                                            <span class="form-text text-muted">Please enter product name</span>
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Toptancı:</label>
                                            <input type="text" class="form-control" id="SupplierId"  value="@(Model.Product?.SupplierId)" name="SupplierId" placeholder="" />
                                            <span class="form-text text-muted">Rakam giriniz.</span>
                                        </div>
                                        <div class="col-lg-12">
                                            <label>Fiyat:</label>
                                            <input type="text" class="form-control" id="UnitPrice" value="@(Model.Product?.UnitPrice)" name="UnitPrice" placeholder="" />
                                            <span class="form-text text-muted">Fiyat giriniz.</span>
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Paket:</label>
                                            <input type="text" class="form-control" id="Package" value="@(Model.Product?.Package)"  name="Package" placeholder="" />
                                            <span class="form-text text-muted">Paket....</span>
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Stok Zorunlu:</label>
                                            <select class="form-control" id="IsDiscontinued" name="IsDiscontinued">
                                                @{
                                                    // Burası c# kodlarını yazacağınız yer
                                                    if (Model.Product?.IsDiscontinued == true)
                                                    {
                                                        <text>
                                                            <option selected="selected" value="1">Evet</option>
                                                            <option value="0">Hayır</option>
                                                        </text>
                                                    }
                                                    else
                                                    {

                                                        <text>
                                                            <option value="1">Evet</option>
                                                            <option selected="selected" value="0">Hayır</option>
                                                        </text>
                                                    }
                                                }
                                            </select>
                                            <span class="form-text text-muted">Stokda varmı</span>
                                        </div>
                                    </div>

                                </div>
                            </form>
                            <!--end::Form-->
                        </div>
                        <!--end::Card-->




                    </div>
                    <div class="tab-pane fade" id="kt_tab_pane_2" role="tabpanel">


                        <!--begin::Card-->
                        <div class="card card-custom gutter-b ">
                            <div class="card-header">
                                <h3 class="card-title">Ürün Hareketleri</h3>
                                <div class="card-toolbar">
                                </div>
                            </div>
                            <!--begin::Form-->
                            <form class="form">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <div class="col-lg-2">
                                            <label>Tarih : </label>
                                            <input type="text" class="form-control" id="OrderDate"   value="@(Model.Product?.OrderDate)"   name="OrderDate" placeholder="" />
                                            <span class="form-text text-muted">Tarih Seçiniz</span>
                                        </div>
                                        
                                    </div>
                                </div>
                            </form>
                            <!--end::Form-->
                        </div>
                        <!--end::Card-->


                    </div>

                    <div class="tab-pane fade" id="Sekme_XmlEntegrasyon" role="tabpanel">

                        <!--begin::Card-->
                        <div class="card card-custom gutter-b ">
                            <div class="card-header">
                                <h3 class="card-title">XML Entegrasyonu</h3>
                                <div class="card-toolbar">
                                </div>
                            </div>
                            <!--begin::Form-->
                            <form class="form">
                                <div class="card-body">
                                    <div class="form-group row"> 
                                        <div class="col-lg-6">
                                            <label>Paket:</label>
                                            <input type="text" class="form-control" id="Package" name="Package" placeholder="" />
                                            <span class="form-text text-muted">Seo Bilgisi</span>
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Stok Zorunlu:</label>
                                            <select class="form-control" id="IsDeleted" name="IsDeleted">
                                                @{
                                                    // Burası c# kodlarını yazacağınız yer
                                                    if (Model.Product?.IsDeleted == true)
                                                    {
                                                        <text>
                                                            <option  value="1">Evet</option>
                                                            <option value="0">Hayır</option>
                                                            <option selected="selected" value="2">Hepsi</option>
                                                
                                                        </text>
                                                    }
                                                    else
                                                    {

                                                        <text>
                                                            <option value="1">Evet</option>
                                                            <option selected="selected" value="0">Hayır</option>
                                                        </text>
                                                    }
                                                }

                                               
                                            </select>
                                            <span class="form-text text-muted">Stokda varmı</span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!--end::Form-->
                        </div>
                        <!--end::Card-->


                    </div>



                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-8">
                        <button type="button" class="btn btn-primary mr-2">Kaydet</button>
                        <button type="button" class="btn btn-primary mr-2">Vazgeç</button>
                        
                    </div>
                </div>
            </div>
        </div>
        <!--end::Card-->



    </div>
</div>
















